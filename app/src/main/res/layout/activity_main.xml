<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:paddingTop="190dp"
    android:paddingLeft="110dp"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/BagsCountTxt"
        android:layout_width="181dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="How many bags?"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="211dp" />

    <EditText
        android:id="@+id/BagsKGTxt"
        android:layout_width="181dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Bag's weight"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="317dp" />



    <EditText
        android:id="@+id/BagNumberTxt"
        android:layout_width="181dp"
        android:layout_height="44dp"
        android:ems="10"
        android:text="0"
        android:inputType="textPersonName"
        android:hint="Bag's number / id"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="265dp" />

    <Button
        android:id="@+id/addBagBtn"
        android:layout_width="106dp"
        android:layout_height="43dp"
        android:text="Add bag"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="388dp" />

    <Button
        android:id="@+id/ResetBtn"
        android:layout_width="85dp"
        android:layout_height="39dp"
        android:text="Reset"
        app:layout_constraintTop_toBottomOf="@+id/addBagBtn"
        tools:layout_editor_absoluteX="162dp" />

    <TextView
        android:id="@+id/totalBagsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total bags added :"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="483dp" />

    <TextView
        android:id="@+id/BagsMeanTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average weight :"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="514dp" />

    <Button
        android:id="@+id/runTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run test with premade json"
        app:layout_constraintTop_toBottomOf="@+id/addBagBtn"
        tools:layout_editor_absoluteX="162dp" />
</LinearLayout>